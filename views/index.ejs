<%- include(crdir+ '/views/partials/nav') %>

<body>
    <h1 class="heading-level-1">Login Page</h1>
    <div class="container">
        <div class="left">
            <form action="/login" method="post">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="Enter Email" required>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter Password" required>
                <button id="submit-button">Login</button>
                <sup>&#9432; You may be redirected back to this page if credentials are incorrect</sup>
                <p>Don't have an account? <a href="/signup">Sign Up</a> for one!</p>
            </form>
        </div>
        <div class="right" style="background-image: url(/header2.jpg);"></div>
    </div>

    <div id="buttonDiv"></div>
    
    <script>
        onload = function () {
            setTimeout(function () {
                document.querySelector('.loading').style.display = 'none';
                document.querySelector('.main').style.display = 'block';
            });
        }
        </script>
</body>

