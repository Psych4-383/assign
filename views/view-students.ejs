<%- include(crdir+ '/views/partials/head' ) %>
    <%- include(crdir+ '/views/partials/nav' ) %>
        <style>
            .students{
                margin: 0 auto;
                width: 80%;
                padding: 20px;
                font-family: work sans;
                font-size: 30px;
            }
            .student {
                background-color: rgb(142, 21, 41);
                padding: 20px;
                color: white;
                margin: 10px;
                display: flex;
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
            }
        </style>
        <body>
            <h1 class="heading-level-1">Student List</h1>
            <div class="students">
                <% students.forEach((student, index)=> { %>
                    <div class="student">
                        <p style="margin-right: 40px;">
                            <%= index+1 %>. <%= student.username %>
                        </p>
                        <p style="font-size: 20px; color: rgb(229, 116, 141);">
                            <%= student.email %>
                        </p>
                    </div>
                    <% }) %>
            </div>
        </body>
        <%- include(crdir+ '/views/partials/footer' ) %>