<%- include(crdir+ '/views/partials/head') %>
<%- include(crdir+ '/views/partials/nav') %>

<style>
    .main {
        margin-top: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
    }
    .head {
        color: rgba(255, 255, 255, 0.526);
        font-size: 15px;
        letter-spacing: 2px;
    }
    .title {
        color: rgb(22, 21, 21);
        font-size: 25px;
        letter-spacing: 0.7px;
    }
    .studentinfo {
        background-color: rgb(201, 108, 124);
        width: 50vw;
        padding: 40px;
        text-align: center;
    }
</style>
<body>
<div class="main">
    <div class="row">
        <div class="col-md-12">
            <h1>Student Dashboard</h1>
        </div>
    </div>
    <div class="row studentinfo">
        <div class="col-md-12" style="letter-spacing: 3px; font-weight: lighter; font-family: work sans;">
            <h2>Student Information</h2>
        </div>
        <p class="head">STUDENT NAME</p>
        <p class="title"> <%= user.username %></p>
        <p class="head">STUDENT EMAIL</p>
        <p class="title"> <%= user.email %></p>
    </div>
    <form action="/view-assignments" method="get">
        <button id="submit-button" style="margin-top: 20px; width: 30vw; margin-bottom: 40px;">View Assignments</button>
    </form>
</body>
<%- include(crdir+ '/views/partials/footer') %>