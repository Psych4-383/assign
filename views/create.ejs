<body>
    <form action="/create-assignment" method="post">
        <label for="title">Title of Assignment</label>
        <input type="text" name="title" id="title">
        <label for="description">Assignment description</label>
        <textarea rows="30" cols="100" name="description" id="description"></textarea>
        <label for="duedate">Assignment due date</label>
        <input type="date" name="duedate" id="duedate">
        <label for="maxmarks">Maximum marks</label>
        <input type="number" name="maxmarks" id="maxmarks">
        <button type="submit">Create Assignment</button>
    </form>
</body>
